@model WebApp.ViewModels.SeminarReportViewModel

@{
    ViewBag.Title = "Générer un rapport sur les Ateliers";
}

<h2>Générer un rapport sur les Ateliers</h2>

<form asp-action="GenerateReport" method="post">
    <div class="form-group">
        <label for="StartDate">Date de début</label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label for="EndDate">Date de fin</label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>



    <button type="submit" class="btn btn-primary">Générer le rapport</button>
</form>
