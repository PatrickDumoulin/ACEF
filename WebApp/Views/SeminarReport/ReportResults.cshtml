@model WebApp.ViewModels.SeminarReportViewModel

@{
    ViewBag.Title = "Rapport des Ateliers";
}

<div class="index container">
    <div class="row pt-5">
        <div class="col-6">
            <h1 class="titreInterventionIndex pb-2">Rapport des Ateliers</h1>
            <hr />
        </div>
    </div>

    <!-- Table des résultats -->
    @if (Model.ReportRows != null && Model.ReportRows.Any())
    {
        <div class="table-container mt-4">
            <table class="table table-striped">
                <thead class="table-header">
                    <tr>
                        <th>Thème</th>
                        <th>Nombre de Participants</th>
                        <th>Nombre d'Ateliers</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model.ReportRows)
                    {
                        <tr>
                            <td>@row.Theme</td>
                            <td>@row.ParticipantCount</td>
                            <td>@row.SeminarCount</td>
                        </tr>
                    }
                    <!-- Affichage des totaux -->
                    <tr class="table-footer">
                        <td><strong>Total</strong></td>
                        <td><strong>@ViewBag.Participanttotal</strong></td>
                        <td><strong>@ViewBag.Ateliertotal</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center">Aucun rapport disponible pour la période sélectionnée.</p>
    }

    <!-- Bouton pour retourner au formulaire de rapport -->
    <div class="pt-3">
        <a href="@Url.Action("Index", "SeminarReport")" class="btn btn-primary"><i class="bi bi-arrow-left"></i> Retour</a>
    </div>
</div>
