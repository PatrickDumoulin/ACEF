@model DataAccess.BOL.InterventionNote.InterventionNoteBOL

@{
    ViewBag.Title = "Ajouter une note";
}

<h2 class="notes-card-header">@ViewBag.Title</h2>

<div class="notes-card-body">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Comment" class="control-label"></label>
            <textarea asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="IdIntervention" />
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a asp-action="Index" asp-route-interventionId="@Model.IdIntervention" class="btn btn-secondary">Annuler</a>
        </div>
    </form>
</div>

<link rel="stylesheet" href="~/css/note.css">
