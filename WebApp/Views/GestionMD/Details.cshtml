@model WebApp.ViewModels.MdDetailViewModel

<div class="container mt-4">
    <div class="row pt-5">
        <div class="col-6">
            <h1 class="titreInterventionIndex pb-2">Détails de : MD @Model.MdName</h1>
            <hr />
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-route-name="@Model.MdName" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus-fill"></i> Créer une Nouvelle Donnée Maitresse
            </a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Valeur</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.MdValues != null && Model.MdValues.Any())
            {
                @foreach (var value in Model.MdValues)
                {
                    <tr>
                        <td>@value</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@value" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i> Modifier
                                </a>
                                <a asp-action="Activate" asp-route-id="@value" class="btn btn-primary">
                                    <i class="bi bi-toggle-on"></i> Activer / Désactiver
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">Aucune donnée disponible pour cette MasterData.</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-secondary mt-3">Retour à la liste</a>
</div>
