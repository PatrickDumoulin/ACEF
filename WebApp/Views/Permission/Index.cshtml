@model IEnumerable<WebApp.ViewModels.EmployeePermissionsViewModel>

@{
    ViewData["Title"] = "Employee Permissions";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ACEF</title>
    <link rel="stylesheet" href="~/css/permissions.css">
</head>
<body>
    <div class="container">
        <h1>Liste des Permissions des Employés</h1>
        <div class="create-button">
            <a asp-action="Create" class="btn btn-primary">Créer une Nouvelle Permission</a>
        </div>

        <table class="table">
            <thead class="table-header">
                <tr>
                    <th>ID Employé</th>
                    <th>Autoriser les Interventions</th>
                    <th>Autoriser les Rapports</th>
                    <th>Autoriser Super Utilisateur</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var permission in Model)
                {
                    <tr>
                        <td>@permission.EmployeeId</td>
                        <td>@(permission.AllowInterventions ? "Oui" : "Non")</td>
                        <td>@(permission.AllowReports ? "Oui" : "Non")</td>
                        <td>@(permission.AllowSu ? "Oui" : "Non")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@permission.Id" class="btn btn-warning">Modifier</a>
                            <a asp-action="Delete" asp-route-id="@permission.Id" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @section Scripts {
        <script src="~/js/your-custom-scripts.js"></script>
    }
</body>
</html>
