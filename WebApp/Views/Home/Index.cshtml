@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model WebApp.ViewModels.ClientViewModel

@{
    ViewData["Title"] = "Accueil";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            @if (SignInManager.IsSignedIn(User))
            {
                <h1>Bienvenue, @UserManager.GetUserName(User)!</h1>
                <p>Vous êtes connecté en tant que @UserManager.GetUserName(User).</p>
                
            }
            else
            {
                <h1>Bienvenue sur notre application Web</h1>
                <p>Veuillez vous connecter pour accéder à votre compte.</p>
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Connexion</a>
            }
        </div>
    </div>
</div>
