@model WebApp.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Créer un employé";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ACEF</title>

</head>
<body>
    <div class="form-container border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="form-title text-center">Créer un Nouvel Employé</h2>
            <hr />
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-action="Create">
            <!-- Champ Nom -->
            <div class="form-group mb-2">
                <label asp-for="FirstName" class="control-label">Nom</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!-- Champ Prénom -->
            <div class="form-group mb-2">
                <label asp-for="LastName" class="control-label mb-2">Prénom</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!-- Champ E-mail -->
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label">Adresse e-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Champ Nom d'utilisateur -->
            <div class="form-group mb-2">
                <label asp-for="UserName" class="control-label">Nom d'utilisateur</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!-- Champ Mot de passe avec affichage/masquage -->
            <div class="form-group mb-2">
                <label asp-for="NewPassword" class="control-label">Mot de passe</label>
                <div class="input-group">
                    <input asp-for="NewPassword" class="form-control" id="passwordField" type="password" />
                    <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </button>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Champ Mot de passe avec affichage/masquage -->
            <div class="form-group mb-2">
                <label asp-for="ConfirmPassword" class="control-label">Confirmer Mot de passe</label>
                <div class="input-group">
                    <input asp-for="ConfirmPassword" class="form-control" id="passwordField" type="password" />
                    <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Champ Actif -->
            <div class="form-group mb-3">
                <label asp-for="Active" class="control-label">Actif</label>
                <select asp-for="Active" class="form-control">
                    <option value="true">Oui</option>
                    <option value="false">Non</option>
                </select>
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>

            <hr />

            <!-- Section Rôles -->
            <div class="form-group mb-4">
                <label class="mb-3">Rôles</label>
                <div class="form-check">
                    <input asp-for="IsSuperUser" class="form-check-input" type="checkbox" id="roleSuperUser" />
                    <label asp-for="IsSuperUser" class="form-check-label">Superutilisateur</label>
                </div>
                <div class="form-check">
                    <input asp-for="IsIntervenant" class="form-check-input" type="checkbox" id="roleIntervenant" />
                    <label asp-for="IsIntervenant" class="form-check-label">Intervenant</label>
                </div>
                <div class="form-check">
                    <input asp-for="IsAdministrateurCA" class="form-check-input" type="checkbox" id="roleAdministrateurCA" />
                    <label asp-for="IsAdministrateurCA" class="form-check-label">Administrateur CA</label>
                </div>
            </div>


            <!-- Boutons de soumission -->
            <div class="row">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary" style="width:150px">Créer</button>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width:150px">Retour</a>
                </div>
            </div>

        </form>
    </div>

    <!-- Script pour afficher/masquer le mot de passe -->
    <script>
        document.querySelector('form').addEventListener('submit', function (e) {
            var isSuperUser = document.getElementById("roleSuperUser").checked;
            var isIntervenant = document.getElementById("roleIntervenant").checked;
            var isAdministrateurCA = document.getElementById("roleAdministrateurCA").checked;

            if (!isSuperUser && !isIntervenant && !isAdministrateurCA) {
                e.preventDefault(); // Empêche la soumission du formulaire
                alert("Veuillez sélectionner au moins un rôle.");
            }
        });
    </script>
</body>
</html>
