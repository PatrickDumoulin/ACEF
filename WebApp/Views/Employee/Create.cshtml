@model WebApp.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Créer un employé";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ACEF</title>
  
</head>
<body>
    <div class="form-container border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="form-title text-center text-wh">Créer un Nouvel Employé</h2>
            <hr />
        </div>

        <form asp-action="Create">

            <div class="form-group mb-2">
                <label asp-for="FirstName" class="control-label">Nom</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="LastName" class="control-label mb-2">Prénom</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="UserName" class="control-label">Nom d'utilisateur</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label">Mot de passe</label>
                <input asp-for="PasswordHash" class="form-control" >
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
                <div class="form-group mb-3">
                    <label asp-for="Active" class="control-label">Actif</label>
                    <select asp-for="Active" class="form-control">
                        <option value="true">Oui</option>
                        <option value="false">Non</option>
                    </select>
                    <span asp-validation-for="Active" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                </div>
                <hr />

            <!-- Ajout des rôles -->
            <div class="form-group mb-4">
                <label class="mb-3">Role</label>
                <div class="form-check">
                    <input asp-for="IsSuperUser" class="form-check-input" type="checkbox" />
                    <label asp-for="IsSuperUser" class="form-check-label">Superutilisateur</label>
                </div>
                <div class="form-check">
                    <input asp-for="IsIntervenant" class="form-check-input" type="checkbox" />
                    <label asp-for="IsIntervenant" class="form-check-label">Intervenant</label>
                </div>
                <div class="form-check">
                    <input asp-for="IsAdministrateurCA" class="form-check-input" type="checkbox" />
                    <label asp-for="IsAdministrateurCA" class="form-check-label">Administrateur CA</label>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary" style="width:150px">Créer</button>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width:150px">Retour</a>
                </div>
            </div>

        </form>
            </div>
        </div>
    </div>

    
</body>
</html>
