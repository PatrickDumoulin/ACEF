@model WebApp.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Supprimer un employé";
    Layout = "_Layout";
}

<h1>Supprimer un employé</h1>

<h3>Êtes-vous sûr de vouloir supprimer cet employé ?</h3>
<div>
    <h4>Employé</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Prénom</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Nom</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">Nom d'utilisateur</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
        <dt class="col-sm-2">Actif</dt>
        <dd class="col-sm-10">@((Model.Active ?? false) ? "Oui" : "Non")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </form>
</div>
