@model WebApp.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="form-container border p-4 mt-4">
    <div class="row pb-2">
        <h1 class="form-title text-center">Modifier l'employé</h1>
        <h4 class="text-center mb-4">@Model.FirstName @Model.LastName</h4>
        <hr />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="Edit">
        <div class="form-group mb-2">
            <label asp-for="FirstName" class="control-label">Nom</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="LastName" class="control-label mb-2">Prénom</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="UserName" class="control-label">Nom d'utilisateur</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        @* <div class="form-group mb-2">
            <label asp-for="Email" class="control-label">Adresse e-mail</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div> *@

        @* <div class="form-group mb-2">
            <label asp-for="NewPassword" class="control-label">Nouveau mot de passe (laisser vide si inchangé)</label>
            <input asp-for="NewPassword" class="form-control" placeholder="Laisser vide si inchangé" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div> *@


        <div class="form-group mb-2">
            <a asp-controller="Employee" asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-primary align-items-center mt-3 mb-3" style="width:150px">Changer mot de passe</a>
        </div>
        



        <div class="form-group mb-4">
            <label class="mb-3">Role</label>
            <div class="form-check">
                <input asp-for="IsSuperUser" class="form-check-input" type="checkbox" />
                <label asp-for="IsSuperUser" class="form-check-label">Superutilisateur</label>
            </div>
            <div class="form-check">
                <input asp-for="IsIntervenant" class="form-check-input" type="checkbox" />
                <label asp-for="IsIntervenant" class="form-check-label">Intervenant</label>
            </div>
            <div class="form-check">
                <input asp-for="IsAdministrateurCA" class="form-check-input" type="checkbox" />
                <label asp-for="IsAdministrateurCA" class="form-check-label">Administrateur CA</label>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary" style="width:150px">Modifier</button>
                <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width:150px">Retour</a>
            </div>
        </div>
    </form>
</div>
