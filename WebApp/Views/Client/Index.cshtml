@model WebApp.ViewModels.ClientSearchViewModel

<partial name="_Notification"/>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table-container {
        margin-top: 30px;
        padding: 7px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 15px 15px rgba(0, 0, 0, 0.1);
    }

    .table-header {
        background-color: #343a40;
        color: white;
        text-transform: uppercase;
    }

    .btn-primary, .btn-secondary {
        border-radius: 20px;
        font-weight: 600;
        padding: 10px 20px;
        border: solid 1px;
        margin-bottom: 10px;
        background-color: #343a40;
        
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-primary:hover {
            background-color: white;
            color:black;
            border: solid 1px;
            border-color: black
        }

    .btn-secondary {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #000000;
    }

        .btn-secondary:hover {
            background-color: #f0f0f0;
        }

    .btn-group .btn {
        border-radius: 5px;
    }

        .btn-group .btn + .btn {
            margin-left: 5px;
        }

    .table th, .table td {
        vertical-align: middle;
    }
</style>



<div class="container">
    <div class="row pt-5">
        <div class="col-6">
            <h1 class="pb-2">Liste des Clients</h1>
            <hr />
            <h4 class="pt-4 pb-3"><i class="bi bi-search"></i> Recherche</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Client" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> Créer un Nouveau Client
            </a>
        </div>
    </div>

    <div class="searchForm container">
        <form asp-action="Index" method="get" class="form-inline search-form">
            <div class="row">
                <div class="col-md-2 mb-3">
                    <div class="form-group">
                        <label for="Id">Numéro de dossier</label>
                        <input type="text" name="Id" id="Id" class="form-control" value="@Model.Id?.ToString()">
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <div class="form-group">
                        <label for="LastName">Nom</label>
                        <input type="text" name="LastName" id="LastName" class="form-control" value="@Model.LastName">
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <div class="form-group">
                        <label for="FirstName">Prénom</label>
                        <input type="text" name="FirstName" id="FirstName" class="form-control" value="@Model.FirstName">
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="form-group">
                        <label for="PhoneNumber">Numéro de téléphone</label>
                        <input type="text" name="PhoneNumber" id="PhoneNumber" class="form-control"  value="@Model.PhoneNumber">
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="form-group">
                        <label for="Email">Courriel</label>
                        <input type="text" name="Email" id="Email" class="form-control"  value="@Model.Email">
                    </div>
                </div>
                
            </div>
            <div class="row">
            <div class="col-md-5 mb-3 d-flex align-items-end pt-3">
                    <div class="form-group d-flex">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> Rechercher
                        </button>
                    @if (!string.IsNullOrEmpty(Model.Id?.ToString()) || !string.IsNullOrEmpty(Model.LastName) || !string.IsNullOrEmpty(Model.FirstName) || !string.IsNullOrEmpty(Model.PhoneNumber) || !string.IsNullOrEmpty(Model.Email))
                    {
                            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-eraser"></i> Effacer le filtre</a>
                    }
                </div>
            </div>
            </div>
        </form>
    </div>

   



    <div class="table-container">
            @if (Model != null && Model.Clients.Count > 0)
        {
            <table class="table table-striped">
                <thead class="table-header">
                    <tr>
                        <th>#Dossier</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Numéro de téléphone</th>
                        <th>Adresse du domicile</th>
                         <th>Courriel</th> 
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var client in Model.Clients)
                    {
                        <tr>
                            <td>@client.Id</td>
                            <td>@client.LastName</td>
                            <td>@client.FirstName</td>
                            <td>@client.PhoneNumber</td>
                            <td>@client.Address</td>
                            <td>@client.Email</td> 
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Client" asp-action="Details" asp-route-id="@client.Id" class="btn btn-primary">
                                        <i class="bi bi-list-ul"></i> Détails
                                    </a>
                                    <a asp-controller="Client" asp-action="Edit" asp-route-id="@client.Id" class="btn btn-primary">
                                        <i class="bi bi-pencil-square"></i> Modifier
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-sortOrder="@ViewBag.CurrentSort">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
        else
        {
            <p class="text-center">Aucun client trouvé.</p>
        }
    </div>
</div>
