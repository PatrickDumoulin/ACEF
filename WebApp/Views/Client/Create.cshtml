@model WebApp.ViewModels.ClientViewModel

@{
    ViewData["Title"] = "Create Client";
}

<style>
    .form-container {
        background-color: #ffffff;
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0 4px 8px 10px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        font-size: 28px;
        color: #000000;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #000000;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        box-shadow: none;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #495057;
            box-shadow: 0 0 0 0.2rem rgba(0, 0, 0, 0.1);
        }

    .btn-primary, .btn-secondary {
        border-radius: 20px;
        padding: 10px 20px;
        font-weight: 600;
        transition: background-color 0.3s, color 0.3s;
    }

    .btn-primary {
        background-color: #000000;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: white;
            color: black;
            border: solid 1px;
            border-color: black
        }

    .btn-secondary {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #000000;
    }

        .btn-secondary:hover {
            background-color: #f0f0f0;
        }
</style>

<form asp-action="Create" method="post">
    <div class="form-container border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="form-title text-center text-wh">Créer un Nouveau Client</h2>
            <hr />
        </div>
        <div class="row">
            <div class="mb-3">
                <label asp-for="IsMember" class="form-label"></label>
                <div class="form-check">
                    <input asp-for="IsMember" class="form-check-input" type="checkbox" />
                    <span asp-validation-for="IsMember" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" type="text" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" type="text" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Birthdate" class="form-label"></label>
                    <input asp-for="Birthdate" type="date" class="form-control" />
                    <span asp-validation-for="Birthdate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IdGenderDenomination" class="form-label"></label>
                    <select asp-for="IdGenderDenomination" class="form-control" asp-items="ViewBag.MdGenderDenomination">
                        <option value="">--Sélectionnez le genre--</option>
                    </select>
                    <span asp-validation-for="IdGenderDenomination" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ZipCode" class="form-label"></label>
                    <input asp-for="ZipCode" class="form-control" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="IdMaritalStatus" class="form-label"></label>
                    <select asp-for="IdMaritalStatus" class="form-control" asp-items="ViewBag.MdMaritalStatus">
                        <option value="">--Sélectionnez l'Etat Civil--</option>
                    </select>
                    <span asp-validation-for="IdMaritalStatus" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IdFamilySituation" class="form-label"></label>
                    <select asp-for="IdFamilySituation" class="form-control" asp-items="ViewBag.MdFamilySituation">
                        <option value="">--Sélectionnez la Situation Familiale--</option>
                    </select>
                    <span asp-validation-for="IdFamilySituation" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="AdultsAtHome" class="form-label"></label>
                    <input asp-for="AdultsAtHome" class="form-control" />
                    <span asp-validation-for="AdultsAtHome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ChildsAtHome" class="form-label"></label>
                    <input asp-for="ChildsAtHome" class="form-control" />
                    <span asp-validation-for="ChildsAtHome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IdHabitationType" class="form-label"></label>
                    <select asp-for="IdHabitationType" class="form-control" asp-items="ViewBag.MdHabitationType">
                        <option value="">--Sélectionnez le Type de Logement--</option>
                    </select>
                    <span asp-validation-for="IdHabitationType" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IdBank" class="form-label"></label>
                    <select asp-for="IdBank" class="form-control" asp-items="ViewBag.MdBanks">
                        <option value="">--Sélectionnez la Banque--</option>
                    </select>
                    <span asp-validation-for="IdBank" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IdEmploymentSituation" class="form-label"></label>
                    <select asp-for="IdEmploymentSituation" class="form-control" asp-items="ViewBag.MdEmploymentSituations">
                        <option value="">--Sélectionnez la Situation d'emploi--</option>
                    </select>
                    <span asp-validation-for="IdEmploymentSituation" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IdScholarshipType" class="form-label"></label>
                    <select asp-for="IdScholarshipType" class="form-control" asp-items="ViewBag.MdScholarshipType">
                        <option value="">--Sélectionnez le Type de Bourse--</option>
                    </select>
                    <span asp-validation-for="IdScholarshipType" class="text-danger"></span>
                </div>
                
            </div>
            <div class="mb-3">
                <label asp-for="Income" class="form-label"></label>
                <input asp-for="Income" class="form-control" />
                <span asp-validation-for="Income" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary" style="width:150px">Créer</button>
                <a asp-controller="Client" asp-action="Index" class="btn btn-secondary" style="width:150px">Retour</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
