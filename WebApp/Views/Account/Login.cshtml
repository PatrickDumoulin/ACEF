@model WebApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Connexion";
}

<div class="containerAccountLogin mt-5">
    <div class="containerAccountLogin2">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="accountLoginTitle">@ViewData["Title"]</h2>
            <form asp-action="Login" method="post">
                @* Message d'erreur global *@
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label class="labelAccountLogin" asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label class="labelAccountLogin" asp-for="Password">Mot de Passe</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="labelAccountLogin form-group form-check mt-2 mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Se souvenir de moi</label>
                </div>

                <button type="submit" class="btn btn-primary">Connexion</button>
            </form>
        </div>
    </div>
    </div>
</div>
