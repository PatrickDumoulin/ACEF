@using DataAccess.BOL.Seminar
@model IEnumerable<SeminarBOL>

@{
    ViewData["Title"] = "Seminars";}



<h1>Seminars</h1>

<a asp-action="Create" class="btn btn-primary"> Créer un nouvel Atelier</a>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Intervenant</th>
            <th>Theme</th>           
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seminar in Model)
        {
            <tr>
                <td>@seminar.DateSeminar?.ToString("g")</td>
                <td>@seminar.IdSeminarTheme</td>
                <td>@seminar.Notes</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@seminar.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@seminar.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
