<style>
    .toast-success {
        background-color: #007bff !important;
    }
</style>

@if (TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "positionClass": "toast-top-center", // Position centrée en haut
            "timeOut": "5000", // Temps avant que la notification disparaisse automatiquement
            "closeButton": true, // Afficher le bouton de fermeture
            
        };
        toastr.success('@TempData["success"]');
    </script>
}

@if (TempData["error"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "positionClass": "toast-top-center", // Position centrée en haut
            "timeOut": "5000", // Temps avant que la notification disparaisse automatiquement
            "closeButton": true, // Afficher le bouton de fermeture
            "progressBar": true // Afficher la barre de progression
        };
        toastr.error('@TempData["error"]');
    </script>
}
