@model WebApp.ViewModels.InterventionReportViewModel

@{
    ViewBag.Title = "Rapport des Interventions";
}

<h2>Rapport des Interventions</h2>

<!-- Afficher les filtres utilisés -->
<div>
    <h4>Filtres appliqués</h4>
    <p>Date de début : @Model.StartDate.ToShortDateString()</p>
    <p>Date de fin : @Model.EndDate.ToShortDateString()</p>
    <p>Revenu minimum : @Model.MinIncome</p>
    <p>Revenu maximum : @Model.MaxIncome</p>
    <p>Âge minimum : @Model.AgeMin</p>
    <p>Âge maximum : @Model.AgeMax</p>
</div>

<!-- Table des résultats -->
@if (Model.Interventions != null && Model.Interventions.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Intervention ID</th>
                <th>Date de l'intervention</th>
                <th>Nom du client</th>
                <th>Nom de l'employé</th>
                <th>Revenu</th>
                <th>Âge</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var intervention in Model.Interventions)
            {
                <tr>
                    <td>@intervention.Id</td>
                    <td>@intervention.DateIntervention?.ToShortDateString()</td>
                    <td>@intervention.ClientName</td>
                    <td>@intervention.EmployeeName</td>
                    <td>@intervention.Income?.ToString("C")</td>
                    <td>@intervention.Age</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Aucune intervention ne correspond aux filtres appliqués.</p>
}

<!-- Bouton pour retourner au formulaire de rapport -->
<a href="@Url.Action("Index", "InterventionReport")" class="btn btn-primary">Retour</a>
