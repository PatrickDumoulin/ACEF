@model WebApp.ViewModels.InterventionAttachmentViewModel

@{
    ViewData["Title"] = "Ajouter une Pièce Jointe";
}

<h1 class="attachments-card-header">Ajouter une Pièce Jointe</h1>

<div class="attachments-card-body">
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file">Sélectionner un fichier</label>
            <input type="file" name="file" class="form-control" />
        </div>
        <input type="hidden" asp-for="IdIntervention" />
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>
</div>

<link rel="stylesheet" href="~/css/attachments.css">
