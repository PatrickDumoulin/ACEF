@model IEnumerable<DataAccess.BOL.InterventionAttachment.InterventionAttachmentBOL>

@{
    ViewData["Title"] = "Pièces Jointes";
}

<h1 class="attachments-card-header">Pièces Jointes</h1>

<div class="attachments-card-body">
    <a asp-action="Create" asp-route-interventionId="@ViewBag.InterventionId" class="btn btn-primary">Ajouter une Pièce Jointe</a>
    <a asp-action="Details" asp-controller="Intervention" asp-route-id="@ViewBag.InterventionId" class="btn btn-secondary">Retour</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nom de Fichier</th>
                <th>Date de Création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var attachment in Model)
            {
                <tr>
                    <td>@attachment.FileName</td>
                    <td>@attachment.CreatedDate?.ToString("g")</td>
                    <td>
                        <a asp-action="Download" asp-route-id="@attachment.Id" class="btn btn-info">Télécharger</a>
                        <a asp-action="Delete" asp-route-id="@attachment.Id" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="~/css/attachments.css">
